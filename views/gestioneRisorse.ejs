<%- include('template/header') %>
<%- include('template/nav') %>


<div class="container-fluid text-center">
    <h1 class="text-center">Gestione Risorse</h1>
    
    
    <div class="form-group m-sm-auto  col-md-6 px-2 my-2">  
        <h3>categorie</h3>
        <div class="btn-group" role="group" aria-label="Basic outlined example"> 
            <select id="selectCat" name="selectCat" class="form-select form-select-sm " aria-label="Categorie">
                <option selected>Categoria</option>
                <% if (categorie) { %>
                    <% categorie.forEach(element => { %>
                        <option value="<%= element.id_categoria %>"><%= element.categoria %></option>
                    <% }) %>
                <% } %>
            </select>
              <a href="gestioneRisorse/edit/" class="btn btn-outline-primary">
                Modifica
              </a>
              <a href="gestioneRisorse/delete/" class="btn btn-outline-primary">
                Elimina
              </a>
        </div>

        <h3>sottocategorie</h3>
        <div class="btn-group" role="group" aria-label="Basic outlined example"> 
          <select id="selectCat" name="selectCat" class="form-select form-select-sm " aria-label="Categorie">
              <option selected>sottocategorie</option>
              <% if (sottocategorie) { %>
                  <% sottocategorie.forEach(element => { %>
                      <option value="<%= element.id_sottocategoria %>"><%= element.sottocategoria %></option>
                  <% }) %>
              <% } %>
          </select>
            <a href="gestioneRisorse/edit/" class="btn btn-outline-primary">
              Modifica
            </a>
            <a href="gestioneRisorse/delete/" class="btn btn-outline-primary">
              Elimina
            </a>
       </div>

       <h3>unita misura</h3>
        <div class="btn-group" role="group" aria-label="Basic outlined example"> 
          <select id="selectCat" name="selectCat" class="form-select form-select-sm " aria-label="Categorie">
              <option selected>unita misura</option>
              <% if (unitaMisura) { %>
                  <% unitaMisura.forEach(element => { %>
                      <option value="<%= element.id_unita_misura %>"><%= element.unita_misura %></option>
                  <% }) %>
              <% } %>
          </select>
            <a href="gestioneRisorse/edit/" class="btn btn-outline-primary">
              Modifica
            </a>
            <a href="gestioneRisorse/delete/" class="btn btn-outline-primary">
              Elimina
            </a>
        </div>

        <h3>causali</h3>
        <div class="btn-group" role="group" aria-label="Basic outlined example"> 
          <select id="selectCat" name="selectCat" class="form-select form-select-sm " aria-label="Categorie">
              <option selected>Categoria</option>
              <% if (causali) { %>
                  <% causali.forEach(element => { %>
                      <option value="<%= causali.id_causale %>"><%= element.causale %></option>
                  <% }) %>
              <% } %>
          </select>
            <a href="gestioneRisorse/edit/" class="btn btn-outline-primary">
              Modifica
            </a>
            <a href="gestioneRisorse/delete/" class="btn btn-outline-primary">
              Elimina
            </a>
        </div>

    </div>
    
 
    

   
    <div class="container">
        <div class="col-6 m-auto pt-3">    
            <form class="form" method="POST" action="/gestioneRisorse/add">
                
              <div class="mb-3">
                <label for="categoriaAggiunta" class="form-label">Categorie</label>
                <input type="text" class="form-control" name="categoriaAggiunta" id="categoriaAggiunta" aria-describedby="categoria"> 
              </div>
              
              <button type="submit" class="btn btn-primary">Submit</button>
          
            </form>
        </div>
    </div>

  
   
      
                                    
  <div class="container">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Open modal for @mdo</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@fat">Open modal for @fat</button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@">Open modal for @getbootstrap</button>
    
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="#" method="PUT">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Recipient:</label>
                <input type="text" class="form-control" id="recipient-name">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Message:</label>
                <textarea class="form-control" id="message-text"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Send message</button>
          </div>
        </div>
      </div>
    </div>
  </div>    

   
      



    
</div>

<script src="/js/script.js"></script>
<%- include('template/footer') %>  